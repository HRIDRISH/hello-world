#include <stdio.h>

int main() {
    int num;

    // number input luwa hol
    printf("Enter a number: ");
    scanf("%d", &num);

    // Check kora hol number tu even ne odd
    if (num % 2 == 0) {
        printf("%d is even.\n", num);
    } else {
        printf("%d is odd.\n", num);
    }

    return 0;
}
